<div class="post">

  <article class="card">

    <div class="card-header">

      <h2>{{post.title}}</h2>
      <div>
        Posted by {{post.User.username}} on {{format_date post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>

  {{#if post.Comments}}

    <section class="card">
      <div class="card-header">
        <h3>Jokes</h3>
      </div>

      <div class="card-body">
        {{#every post.Comments}}
          <div>
            <p>
              {{body}}

        {{/every}}
      </div>
    </section>

  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Joke</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <label class="form-label" for="comment-body">Joke</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>
